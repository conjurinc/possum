- !policy
  id: conjur/authn-k8s/<%= service_id %>
  body:
  - !webservice
  - !policy
    id: ca
    body:
    - !variable cert
    - !variable key

  - !policy
    id: kubernetes
    body:
    - !variable service-account-token
    - !variable ca-cert
    - !variable api-url

  - !layer users

  - !permit
    resource: !webservice
    privilege: [ read, authenticate ]
    role: !layer users
